<?xml version="1.0" encoding="utf-8"?>
<!-- Custom splash screen matching our Flutter design -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Gradient background -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#FF6B46C1"
                android:endColor="#FFB83280"
                android:angle="90" />
        </shape>
    </item>

    <!-- QuizArena app icon in center -->
    <item>
        <bitmap
            android:gravity="center"
            android:src="@mipmap/ic_launcher" />
    </item>
</layer-list>
